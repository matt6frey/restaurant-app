     </button>

     <form name ='check_order_form' id='check_order_form' action='/.../' method='...'>
      <input name="check_order_text" class="check_order_text form-control d-inline-block my-3" type="number">
      <button class="check btn btn-primary" type="submit">
       <span class="check_button_text">Check</span>
      </button>
     </form>
     <!-- If on dashboard or order pages, check order not shown -->

     <section class="info">
      <span class="number_text">780-888-8888</span>
      <span class="address_text">1234 Main Street</span>
     </section>

     <!-- This should not be shown on Dashboard Page -->
     <section class="location">
      <span class="distance_text">10 KM Away</span>
      <i class="fa fa-location-arrow"></i>
     </section>
     <!-- This should not be shown on Dashboard Page -->

