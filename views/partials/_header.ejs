  <body>
    <div class="nav">

     <img class="logo" src="/images/bird.jpg" >
      <h1>The Bird</h1>

      <div class='rwd-menu'>
        <button class="btn"><span class="fas fa-bars"></span></button>
      </div>
      <!-- This button should ONLY be shown on index when menu IS NOT open -->
     <button class="menu btn btn-primary" type="submit">
      <span class="menu_text">Menu</span>
     </button>
     <!-- This button should ONLY be shown on index when menu IS NOT open -->

     <!-- This button should be displayed in ALL other cases on EVERY other page -->
     <button class="home btn btn-primary" type="submit">
      <span class="home_text">Home</span>
     </button>
     <!-- This button should be displayed in ALL other cases on EVERY other page -->

     <!-- If on dashboard or order pages, check order not shown -->
     <button class="check_order btn btn-primary" type="submit">
